{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block body %}
    <div class="bodyForm">
        <div class="login-page">
            <div class="form">
    <h1 class="h3 mb-3 font-weight-normal">Enregistrez-vous</h1>

    {{ form_start(registrationForm) }}
        {{ form_row(registrationForm.username, {'label':'Pseudo'}) }}
        {{ form_row(registrationForm.password) }}
        {{ form_row(registrationForm.email) }}
        {{ form_row(registrationForm.agreeTerms, {'label':'Accepter les conditions'}) }}

        <button class="btn">S'enregistrez</button>
    {{ form_end(registrationForm) }}
            </div>
        </div>
    </div>
{% endblock %}
